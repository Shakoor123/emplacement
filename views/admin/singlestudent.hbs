<section class="vh-200" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Chage info</h3>
            <form action="/admin/changeDetails" method="post">
            <div class="form-outline mb-4">
              <input type="number" name="regno" maxlength="8" minlength="8" value="{{result.rno}}" class="form-control form-control-lg" required />
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="name" value="{{result.name}}" class="form-control form-control-lg" required/>
            </div>

            <div class="form-outline mb-4">
              <input type="number" name="phone" value="{{result.phone}}" class="form-control form-control-lg" readonly/>
            </div>
             <select  name='branch' class="form-control form-control-lg">
    <option selected disabled>Select Branch</option>
    <option value="EEE">EEE</option>
    <option value="EL">EL</option>
    <option value="CE">CE</option>
    <option value="CT">CT</option>
    <option value="ME">ME</option>
  </select>
            <div class="form-outline mb-4">
              <input type="email" name="email" value="{{result.email}}" class="form-control form-control-lg" required/>
            </div>
            
            <div class="form-outline mb-4">
              <input type="number" name="cgpa" value="{{result.cgpa}}" maxlength="5" class="form-control form-control-lg"  required />
            </div>
            
            <button class="btn btn-primary btn-lg btn-block" type="submit">Change</button>

          
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


