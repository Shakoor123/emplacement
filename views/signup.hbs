{{!-- form section --}}
<section class="vh-200">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;background-color:#0000000a; margin-top:50px;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Register</h3>
            <form action="/signup" method="post">
            {{#if sign}}
            <h6 style="color: red;">User Alredy Exist</h6>
            {{/if}}
            <div class="form-outline mb-4">
              <input type="number" name="regno" maxlength="8" minlength="8" placeholder="Register No" class="form-control form-control-lg" required />
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="name" placeholder="Name of Student" class="form-control form-control-lg" required/>
            </div>
            
            <div class="form-outline mb-4">
                <label class="custom-select">
  <select  name='options' class="form-control">
    <option >Select your Branch</option>
    <option value="EEE">EEE</option>
    <option value="EL">EL</option>
    <option value="CE">CE</option>
    <option value="CT">CT</option>
    <option value="ME">ME</option>
  </select>
</label>
            </div>

            <div class="form-outline mb-4">
              <input type="email" name="email" placeholder="Email of Student" class="form-control form-control-lg" required/>
            </div>
            
            <div class="form-outline mb-4">
              <input type="number" name="mobile" placeholder="Phone no of Student" maxlength="10" minlength="10" class="form-control form-control-lg" required/>
            </div>
            
            <div class="form-outline mb-4">
              <input type="number" name="cgpa" placeholder="Cgpa of Student" maxlength="5" class="form-control form-control-lg"  required/>
            </div>
            
            <div class="form-outline mb-4">
              <input type="password" name="password" placeholder="password" class="form-control form-control-lg"  required/>
              
            </div>

            <div class="form-outline mb-4">
              <input type="password" name="password2" placeholder="Retype password"class="form-control form-control-lg" required>
            </div>

            <button class="btn login" type="submit">sign up</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


